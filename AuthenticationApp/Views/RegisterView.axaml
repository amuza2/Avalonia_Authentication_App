<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="AuthenticationApp.Views.RegisterView"
    x:DataType="vm:RegisterViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AuthenticationApp.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:RegisterViewModel />
    </Design.DataContext>

    <Border Background="#f5f5f5">
        <Border
            CornerRadius="8"
            MaxWidth="400"
            Padding="40">
            <StackPanel Spacing="15">
                <TextBlock
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="#2c3e50"
                    HorizontalAlignment="Center"
                    Text="Register" />

                <ScrollViewer>
                    <!--  First Name Field  -->
                    <StackPanel Spacing="10">
                        <StackPanel Spacing="5">
                            <TextBlock FontWeight="SemiBold" Text="First Name" />
                            <TextBox Text="{Binding FirstName}" Watermark="Enter your first name" />
                        </StackPanel>

                        <!--  Last Name Field  -->
                        <StackPanel Spacing="5">
                            <TextBlock FontWeight="SemiBold" Text="Last Name" />
                            <TextBox Text="{Binding LastName}" Watermark="Enter your last name" />
                        </StackPanel>

                        <!--  Email Field  -->
                        <StackPanel Spacing="5">
                            <TextBlock FontWeight="SemiBold" Text="Email" />
                            <TextBox Text="{Binding Email}" Watermark="Enter your email" />
                        </StackPanel>

                        <!--  Password Field  -->
                        <StackPanel Spacing="5">
                            <TextBlock FontWeight="SemiBold" Text="Password" />
                            <TextBox
                                PasswordChar="*"
                                Text="{Binding Password}"
                                Watermark="Enter your Password" />
                        </StackPanel>

                        <!--  Confirm Password Field  -->
                        <StackPanel Spacing="5">
                            <TextBlock FontWeight="SemiBold" Text="Confirm Password" />
                            <TextBox
                                PasswordChar="*"
                                Text="{Binding ConfirmPassword}"
                                Watermark="Confirm your Password" />
                        </StackPanel>

                        <TextBox Text="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

                        <!--  Register Button  -->
                        <Button
                            Background="#27ae60"
                            Command="{Binding RegisterCommand}"
                            Content="Register"
                            Foreground="White"
                            Height="40"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            IsEnabled="{Binding !IsLoading}"
                            Margin="0,10"
                            VerticalContentAlignment="Center" />

                        <ProgressBar
                            Height="4"
                            IsIndeterminate="True"
                            IsVisible="{Binding IsLoading}" />

                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="5">
                            <TextBlock Foreground="#7f8c8d" Text="Already have an account?" />
                            <Button
                                Background="Transparent"
                                Command="{Binding NavigateToLoginCommand}"
                                Content="Login here"
                                Foreground="#3498db"
                                Padding="0" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Border>

</UserControl>
